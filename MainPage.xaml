<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App1.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">


            <Border 
                x:Name="border"
                Stroke="Blue"
                StrokeDashOffset="0"
                StrokeThickness="2"
                StrokeShape="RoundRectangle 10"
                HeightRequest="50"
                WidthRequest="300">

            </Border>

            <Button Text="Click here" Clicked="Button_Clicked" HorizontalOptions="Center"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
